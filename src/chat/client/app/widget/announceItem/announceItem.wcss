.item-wrap{
    margin-top: 10px;
    width: 710px;
    padding:20px;
    border-radius: 12px;
    background-color: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 2px 0px rgba(0, 0, 0, 0.2);
}
.title{   
    color: rgba(34, 34, 34, 1);
    font-size: 32px;
    margin-bottom:16px;
    width: 300px;
    overflow: hidden;
    text-overflow: ellipsis;
   white-space: nowrap;
}
.time{   
    color: rgba(136, 136, 136, 1);
    font-size: 24px;
}