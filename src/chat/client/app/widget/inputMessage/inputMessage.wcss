.outer{
    height: 100%;
    background-color: rgba(255, 255, 255, 1);
}
.input-message-wrap{
    display: flex;
    align-items:center;
    border-top: 1px solid #cccccc;
    border-bottom: 1px solid #cccccc;
}
.audio{
    height: 60px;
    margin: 5px 0 5px 20px;
    border: 20px solid transparent;
}
.inputMessage{
    flex: 1 0 0;
    outline:none;
    border:none;
    font-size:32px;
    margin-left: 20px;
}
.emoji{
    width: 48px;
    height: 48px;
    border: 20px solid transparent;
}
.unfold{
    width: 44px;
    height: 44px;
    margin-right: 10px; 
    border: 20px solid transparent;
}
.emojiMap{
    height:420px;
    overflow-x:hidden;
    overflow-y:auto;
    min-height: 420px;
}
.toolsMap{
    height: 420px;
    min-height: 420px;
}
.toolItem{
    display: flex;
    flex-direction: column;
    font-size: 24px;
    color: #888888;
    align-items: center;
    width: 120px;
    margin-left: 50px;
    margin-top: 40px;
}
.toolImg{
    width:120px;
    height:120px;
    background:rgba(255,255,255,1);
    border-radius:12px;
    border:1px solid rgba(204,204,204,1);
}
.audioWrap{
    position: absolute;
    bottom: 200px;
    left: 50%;
    transform: translateX(-50%);
    width: 180px;
    height: 180px;
    background: rgba(85,85,85,.5);
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 40px;
}
.radioWrite{
    width: 30px;
    height: 15px;
    background: #fff;
    margin-top: 20px;
    margin-left: 75px;
}
.audioWrap{
    height: 420px;
    min-height: 420px;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}
.audioBox{
    width:150px;
    height:150px;
    background:rgba(255,255,255,1);
    border:2px solid rgba(204,204,204,1);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    box-sizing: content-box;
}
.audioActive{
    background: #2A54C3;
}
.audioIcon{
    height: 100px;
    width: 100px;
}
.circleRing{
    position: absolute;
    width: 160px;
    height: 160px;
}
.circle{
    position: absolute;
    width: 150px;
    height: 150px;
    border: 5px solid rgb(87, 255, 93);
    box-sizing: content-box;
    border-radius: 50%;
}
.audioText{
    font-size:32px;
    color: #222;
    font-weight: 300;
    margin-bottom: 60px;
}