.item{
    display: flex;
    align-items: center;
    height: 120px;
    font-size: 28px;
    color: #222;
}
.avatar{
    margin: 20px;
    flex-shrink: 0;
}
.username{
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}
.desc{
    font-size: 24px;
    color: #888888;
    width: 405px;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.itemBtn{
    width:160px;
    height:60px;
    background:rgba(42,86,198,1);
    font-size:28px;
    font-weight:500;
    color:rgba(255,255,255,1);
    line-height:60px;
    text-align: center;
    margin: 20px;
    border-radius: 6px;
}
.offical{
    font-size:24px;
    font-weight:300;
    color:rgba(49,91,200,1);
    line-height:32px;
    width:80px;
    height:32px;
    border-radius:16px;
    border:1px solid rgba(49,91,200,1);
    display: inline-block;
    text-align: center;
}
.active{
    background: #CCCCCC;
    color: #222;
}
.btnGroup{
    display: flex;
}
.btn{
    width:60px;
    height:60px;
    background:rgba(66,133,244,1);
    font-size:24px;
    font-family:SourceHanSansCN-Normal,SourceHanSansCN;
    font-weight:400;
    color:rgba(255,255,255,1);
    text-align: center;
    line-height: 60px;
    border-radius: 50%;
    margin-right: 30px;
}
.activeBtn{
    background:rgba(255,255,255,1);
    color:rgba(66,133,244,1);
    border:1px dashed rgba(66,133,244,1);
}
.chat{
    width: 50px;
    height: 50px;
    margin-right: 30px;
}
.blackBtn{
    width:140px;
    height:60px;
    background:#4285F4;
    border-radius:6px;
    font-size:24px;
    font-weight:400;
    color:rgba(255,255,255,1);
    text-align: center;
    margin-right: 30px;
    line-height: 60px;
}